<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_item_chat_image"
        android:layout_width="@dimen/item_chats_image_length"
        android:layout_height="@dimen/item_chats_image_length"
        android:layout_margin="8dp"
        android:contentDescription="@string/image_view_item_chat_content_description"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/text_view_item_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="This is item # xx" />

        <TextView
            android:id="@+id/text_view_item_chat_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Last message" />
    </LinearLayout>
</LinearLayout>